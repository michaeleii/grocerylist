@page
@model GroceryList.Pages.IndexModel

@{
    ViewData["Title"] = "Home";
}

<p>
    <a asp-page="./Groceries/Create" class="btn btn-primary">Add new item</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grocery[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grocery[0].Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Grocery) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <a asp-page="./Groceries/Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Groceries/Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Groceries/Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
